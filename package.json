{
  "name": "@recipe-app/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "nx",
    "nx": "nx",
    "ngcc": "ngcc",
    "start": "nx run-many --target=serve --projects=web-app,api --parallel",
    "build": "nx run-many --target=build --projects=web-app,api,mobile-app --parallel --skip-nx-cache",
    "build:prod": "nx run-many --target=build --projects=web-app,api,mobile-app --parallel --configuration production",
    "build:api": "nx build api",
    "build:api:prod": "nx build api --configuration production --skip-nx-cache",
    "build:web-app": "nx build web-app --skip-nx-cache",
    "build:web-app:prod": "nx build web-app --configuration production --skip-nx-cache",
    "build:mobile-app": "nx build mobile-app --skip-nx-cache",
    "build:mobile-app:prod": "nx build mobile-app --configuration production --skip-nx-cache",
    "clean": "rimraf ./dist ./junit ./coverage ./.angular",
    "clean:node_modules": "rimraf ./node_modules ./package-lock.json",
    "serve:api": "nx serve api",
    "serve:web": "nx serve web-app",
    "serve:mobile": "nx serve mobile-app",
    "test:api": "nx test api",
    "test": "nx affected --target=test",
    "test:ci": "npm run test -- --configuration ci",
    "test:all": "nx run-many --target=test --all --configuration ci",
    "lint": "nx affected --target=lint --fix --skip-nx-cache",
    "lint:all": "nx run-many --target=lint --all --skip-nx-cache",
    "lint:workspace": "nx workspace-lint && ng lint",
    "e2e": "nx e2e web-app-e2e",
    "e2e:ci": "npm run e2e -- --configuration production",
    "e2e:watch": "npm run e2e -- --configuration watch",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "format": "npm run lint && npm run format:write && npm run beautify",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "beautify": "js-beautify --type=html -r -f ./**/*.html",
    "update": "nx migrate latest",
    "workspace-schematic": "nx workspace-schematic",
    "dep-graph": "nx dep-graph",
    "help": "nx help",
    "prepare": "husky install",
    "migrate:run": "npm i && npx nx migrate --run-migrations",
    "migrate:angular:core": "npx nx migrate @angular/core@latest",
    "migrate:angular:cli": "npx nx migrate @angular/cli@latest",
    "migrate:angular:schematics": "npx nx migrate @schematics/angular@latest",
    "migrate:ngrx": "npx nx migrate @ngrx/component-store@latest",
    "migrate:nx": "npx nx migrate latest",
    "migrate:all": "npm run migrate:nx && npm run migrate:angular:core && npm run migrate:angular:cli && npm run migrate:angular:schematics && npm run clean:node_modules && npm run migrate:run",
    "serve-android": "npx nx run mobile-app:build --skip-nx-cache && npx nx run mobile-app:sync:android && npx nx run mobile-app:cap --cmd=\"run android\"",
    "serve-ios": "npx nx run mobile-app:build --skip-nx-cache && npx nx run mobile-app:sync:ios && npx nx run mobile-app:cap --cmd=\"run ios\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~17.1.0",
    "@angular/common": "~17.1.0",
    "@angular/compiler": "~17.1.0",
    "@angular/core": "~17.1.0",
    "@angular/forms": "~17.1.0",
    "@angular/platform-browser": "~17.1.0",
    "@angular/platform-browser-dynamic": "~17.1.0",
    "@angular/router": "~17.1.0",
    "@nx/angular": "18.0.2",
    "bootstrap": "^3.4.1",
    "primeicons": "^6.0.1",
    "primeng": "^17.5.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~17.1.0",
    "@angular-devkit/core": "~17.1.0",
    "@angular-devkit/schematics": "~17.1.0",
    "@angular-eslint/eslint-plugin": "~17.0.0",
    "@angular-eslint/eslint-plugin-template": "~17.0.0",
    "@angular-eslint/template-parser": "~17.0.0",
    "@angular/cli": "~17.1.0",
    "@angular/compiler-cli": "~17.1.0",
    "@angular/language-service": "~17.1.0",
    "@nx/cypress": "18.0.2",
    "@nx/eslint": "18.0.2",
    "@nx/eslint-plugin": "18.0.2",
    "@nx/jest": "18.0.2",
    "@nx/js": "18.0.2",
    "@nx/web": "18.0.2",
    "@nx/workspace": "18.0.2",
    "@schematics/angular": "~17.1.0",
    "@swc-node/register": "~1.6.7",
    "@swc/core": "~1.3.85",
    "@swc/helpers": "~0.5.2",
    "@types/jest": "^29.4.0",
    "@types/node": "18.16.9",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "cypress": "^13.0.0",
    "eslint": "~8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.13.4",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "jest-preset-angular": "~13.1.4",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "18.0.2",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.3.2"
  }
}
